<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_NandroidMaidUniform</defName>
    <description>A standard Sterling brand Nandroid maid uniform.</description>
    <label>Nandroid maid uniform</label>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
	  <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>CraftingSpot</li>
      </recipeUsers>
	  <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/NandroidMaidUniform</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>45</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>2700</WorkToMake>
      <Mass>0.3</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.26</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	<apparel>
      <countsAsClothingForNudity>true</countsAsClothingForNudity>
	  <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/NandroidMaidUniform</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>NandroidClothing</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
	  <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>50</weight>
					<only>(255,255,255,255)</only>
				</li>
			</options>
	</colorGenerator>
  </ThingDef>
  
  <ThingDef ParentName="HatMakeableBase">
    <defName>Apparel_NandroidMaidHeadband</defName>
    <label>Nandroid maid headband</label>
    <description>A standard Sterling brand maid headband.</description>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>CraftingSpot</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/NandroidMaidHeadband</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <!--<drawSize>0.80</drawSize>-->
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <statBases>
      <WorkToMake>4000</WorkToMake>
      <Mass>0.05</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.10</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/NandroidMaidHeadband</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
	  <tags>
        <li>NandroidClothing</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
		<li>Soldier</li>
      </defaultOutfitTags>
	  <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
    </apparel>
	<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>50</weight>
					<only>(255,255,255,255)</only>
				</li>
			</options>
	</colorGenerator>
  </ThingDef>

</Defs>
